    <h1 class="h2">Realizar Chamada</h1>
</div>

<% messages2.forEach(element => { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= element %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% }) %>

<div class="table-responsive">

    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Sobrenome</th>
          <th scope="col">Email do Respons√°vel</th>
          <th scope="col" class="text-end"></th>
        </tr>
      </thead>
  
      <tbody class="tabela">
        <% alunos.forEach(element => { %>
          <tr class="align-middle">
            <td><%= element.firstName %></td>
            <td><%= element.lastName %></td>
            <td><%= element.email %></td>
            <td class="text-end">
  
              <div class="d-flex flex-row justify-content-end gap-2">
                <a href="/addFaltaPage/<%= element._id %>" type="button" class="btn btn-danger btn-small">
                    <i class="bi bi-x"></i> Adicionar Falta
                </a>

                <%#<input type="checkbox" id="hobby" name="alunos[]" value="sing"/> &nbsp;&nbsp;<strong></strong>&nbsp;&nbsp;
                %>
              </div>
  
  
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  
  <% if (alunos.length > 0) { %>
    <nav aria-label="Dashboard Pagination">
      <ul class="pagination justify-content-center mt-5">
  
      </ul>
    </nav>

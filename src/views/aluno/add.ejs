<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Novo Aluno</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Lista da Turma</a></li>
          <li class="breadcrumb-item active">Adicionar Aluno</li>
        </ol>
      </nav>
    </div>

  </div>

</div>


<form action="/add" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="firstName">Nome</label>
      <input type="text" class="form-control" id="firstName" name="firstName" value="" placeholder="Nome" required>
    </div>

    <div class="col">
      <label for="lastName">Sobrenome</label>
      <input type="text" class="form-control" id="lastName" name="lastName" value="" placeholder="Sobrenome" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Número de Matrícula</label>
      <input type="text" class="form-control" id="tel" name="tel" value="" placeholder="Matrícula" required>
    </div>

    <div class="col">
      <label for="email">Email do Responsável</label>
      <input type="text" class="form-control" id="email" name="email" value="" placeholder="Email" required>
    </div>
  </div>


  <div class="form-group mb-4">
      <label for="details">Observação</label>
      <textarea class="form-control" name="details" id="details" cols="30" rows="12"></textarea>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Adicionar Aluno</button>
  </div>

  

</form>
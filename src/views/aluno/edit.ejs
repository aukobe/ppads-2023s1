<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Editando: <%= aluno.firstName %> <%= aluno.lastName %></h1>
  <div class="btn-toolbar mb-2 mb-md 0">
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Lista da Turma</a></li>
          <li class="breadcrumb-item active"><%= aluno.firstName %> <%= aluno.lastName %></li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Último Update: <%= new Date(aluno.updatedAt)  %></b>
      <br/>
      <b>ID do Usuário:</b> <%= aluno._id %>
    </div>
  </div>

</div>


<form action="/edit/<%= aluno._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="firstName">Nome</label>
      <input type="text" class="form-control" id="firstName" name="firstName" value="<%= aluno.firstName %>" placeholder="Nome" required>
    </div>

    <div class="col">
      <label for="lastName">Sobrenome</label>
      <input type="text" class="form-control" id="lastName" name="lastName" value="<%= aluno.lastName %>" placeholder="Sobrenome" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tel">Número de Matrícula</label>
      <input type="text" class="form-control" id="tel" name="tel" value="<%= aluno.tel %>" placeholder="Matrícula" required>
    </div>

    <div class="col">
      <label for="email">Email do Responsável</label>
      <input type="text" class="form-control" id="email" name="email" value="<%= aluno.email %>" placeholder="Email" required>
    </div>
  </div>

  <div class="form-group mb-4">
      <label for="details">Observação</label>
      <textarea class="form-control" name="details" id="details" cols="30" rows="12"><%= aluno.details %></textarea>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Atualizar Aluno</button>

    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Remover Aluno</button>

  </div>

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title"></div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          Os dados do aluno <b class="fw-bold"><%= aluno.firstName %> <%= aluno.lastName %></b><br/> serão removidos.
          Tem certeza?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <form action="/edit/<%= aluno._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">Remover Aluno</button>
        </form>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">3° B - Matutino</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <a href="/add" class="btn btn-sm btn-outline-secondary">+ Adicionar Aluno</a>
    </div>
  </div>
</div>

<div class="table-responsive">
  <% if (alunos != "") { %>
  
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Sobrenome</th>
          <th scope="col">Número de Matrícula</th>
          <th scope="col">Email do Responsável</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% alunos.forEach(element => { %>
          <tr class="align-middle">
            <td><%= element.firstName %></td>
            <td><%= element.lastName %></td>
            <td><%= element.tel %></td>
            <td><%= element.email %></td>
            <td>

              <div class="d-flex flex-row justify-content-end gap-2">

                <a href="/view/<%= element._id %>" type="button" class="btn btn-primary btn-small">
                  <i class="bi bi-eye"></i>
                </a>
  
                <a href="/edit/<%= element._id %>" type="button" class="btn btn-warning btn-small">
                  <i class="bi bi-pencil"></i>
                </a>
  
              </div>

            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  <% } else { %>
    <h2>Nenhum resultado encontrado.</h2>
  <% } %>

</div>
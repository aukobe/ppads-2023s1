<div id="mensagem" style="display: none;" class="alert alert-success mt-4">
    Notificação enviada com sucesso.
</div>

<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Enviar Notificação para os Responsáveis de: <%= aluno.firstName %> <%= aluno.lastName %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
    </div>
  </div>
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Lista da Turma</a></li>
            <li class="breadcrumb-item active"><a href="/view/<%= aluno._id %>"><%= aluno.firstName %> <%= aluno.lastName %></a></li>
          </ol>
        </nav>
      </div>
    </div>
  
  </div>
  
  
  <form class="position-relative" onsubmit="event.preventDefault(); enviarNotificacao();">
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="email">Email do Responsável</label>
        <input type="text" class="form-control" id="email" name="email" value="<%= aluno.email %>" placeholder="Email" required>
      </div>
    </div>
  
    <div class="form-group mb-4">
        <label for="details">Mensagem</label>
        <textarea class="form-control" name="details" id="details" cols="30" rows="12" required></textarea>
    </div>
  
    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Enviar Notificação</button>
    </div>
  </form>

  <script>
    function enviarNotificacao() {
      // Lógica para enviar a notificação
  
      // Exibir mensagem de sucesso
      document.getElementById("mensagem").style.display = "block";

      document.getElementById("details").value = "";
    }
  </script>

  
  
  
  
  
  
  
  